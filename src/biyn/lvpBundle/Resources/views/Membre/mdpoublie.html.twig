{% extends "biynlvpBundle::extranet.html.twig" %}

{% block title %}
    Changer mon Mot de Passe - {{ parent() }}
{% endblock %}

{% block biynlvp_body %}
<header>
        <div class="header-content">
            <div class="header-content-inner">
               <div class="row">
                 <div class="col-xs-10 col-xs-push-1">
                    <form method="POST" class="form-signin">

                        <h2 class="form-signin-heading">Mot de passe Oublié :</h2>
                        <p>&nbsp;</p>
                        <p class="text-left">
                            <strong>ETAPE 1 :</strong> Saisissez votre Adresse Email.<br>
                            <strong>ETAPE 2 :</strong> Vous allez reçevoir un email vous invitant à choisir un nouveau mot de passe.
                        </p>
                        
                        {% if error %}
                            <div class="alert alert-danger">
                                <span class="text-danger"><i class="fa fa-exclamation-triangle fa-3x" aria-hidden="true"></i></span><br>
                                {{ error | raw }}
                            </div>
                        {% endif %}

                        {% if success %}
                            <div class="alert alert-success">
                                {{ success | raw }}
                            </div>
                        {% endif %}

                        <label for="inputEmail" class="sr-only">Adresse email</label>
                        <input type="email" id="username" name="email" class="form-control" placeholder="Votre Adresse Email..." required autofocus>

                        <button class="btn btn-lg btn-primary btn-block" type="submit">Réinitialiser mon Mot de Passe</button>
                    </form>
                 </div>
               </div>
            </div>
        </div>
    </header>
{% endblock %}

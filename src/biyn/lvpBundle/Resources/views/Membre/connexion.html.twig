{% extends "biynlvpBundle::extranet.html.twig" %}

{% block title %}
    Connexion - {{ parent() }}
{% endblock %}

{% block biynlvp_body %}
<header>
        <div class="header-content">
            <div class="header-content-inner">
               <div class="row">
                 <div class="col-xs-6 col-xs-push-3">
                    <form action="{{ path('biynlvp_connexion_validation') }}" method="POST" class="form-signin">

                        <h2 class="form-signin-heading">Espace Membre :</h2>
                        <p>Nous vous invitons à vous connecter avec vos identifiants reçu par email.</p>
                        
                        {% if error %}
                            <div class="alert alert-danger">
                                {#{{ error.messageKey|trans(error.messageData, 'security')  }}#}
                                Identifiants et/ou mot de passe incorrect.
                            </div>
                        {% endif %}

                        {% if app.request.get('msg') %}
                            <div class="alert alert-success">
                                {{ app.request.get('msg') | raw }}
                            </div>
                        {% endif %}

                        <label for="inputEmail" class="sr-only">Adresse email</label>
                        <input type="email" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Email address" required autofocus>

                        <label for="inputPassword" class="sr-only">Mot de passe</label>
                        <input type="password" id="password" name="_password" class="form-control mt-5" placeholder="*******" required>

                        <button class="btn btn-lg btn-primary btn-block" type="submit">Connexion</button>

                        <br><a href="{{ url('biynlvp_mdp_oublie') }}">J'ai oubli&eacute; mon mot de passe</a>

                    </form>
                 </div>
               </div>
            </div>
        </div>
    </header>
{% endblock %}
